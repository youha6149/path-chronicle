[flake8]
exclude =
    # No need to traverse our git directory
    .git,
    # There's no value in checking cache directories
    __pycache__,
    # The old directory contains Flake8 2.0
    old,
    # This contains our built documentation
    build,
    # This contains builds of flake8 that we don't want to check
    dist,
    # Because virtualenv
    .venv,
    # Because the command string will inevitably become long.
    test_integration.py,
    # Temporarily excluded because the command string inevitably becomes long
    interface.py

max-line-length = 88
